{{!--cardSingle--}}    
<!-- Card producto -->
        <section>
            {{#if producto}}
                    <h1 class="mt-4 mb-5">Producto Buscado</h1>
                    <article class="row">                        
                            <div class="col-lg-4 col-md-12 mb-4">
                                    <div class="card1">
                                        <img id="image1" src="{{product.thumbnail}}" class="card-img-top images" alt="cable cpu pcie">
                                        <div class="card-body">
                                            <h5 class="card-title">{{product.title}}</h5>
                                            <p class="card-text">Adaptador para ficha macho CPU de 8 pines a ficha pcie 6+2 pines hembra</p>
                                            <section class="card-body">
                                                <!-- Divider -->
                                                <hr>
                                                <!-- Price -->
                                                <h6 class="mb-0">
                                                    <span class="text-danger mr-1">{{product.price}}</span>
                                                    <span class="text-grey"><s>{{product.price}}</s></span>
                                                </h6>
                                                <div>
                                                    <!-- range field -->
                                                    <form id="form1">
                                                        <p>Cantidad</p>
                                                        <input type="range" name="amountRange" min="0" max="20" value="0" size="3" oninput="this.form.amountInput.value=this.value" />
                                                        <input data-qId="1" id="quantityBtn1" type="number" name="amountInput" min="0" max="20" value="0" oninput="this.form.amountRange.value=this.value" />
                                                    </form>
                                                    <!-- buttons -->
                                                    <button data-id="1" id="sendBtn1" type="button" class="btn btn-primary btn-sm mr-1 my-1"><i class="fa fa-shopping-cart pr-2"></i>Agregar al carrito</button>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                            </div>
                        
                    </article>
                    <br>
            {{ else }}
                <div class="back-yellow m-5">
                    <h2 class="alert alert-danger">No se encontro el producto</h2>
                </div>
            {{/if}}
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


